<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/musicBarLayout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:background="#575c58"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.MusicBarFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageButton
        android:id="@+id/playListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/play_list_img" />

    <TextView
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:gravity="fill_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/noMusciList" />
    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/prev_music_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/playBtn"
        android:layout_width="wrap_content"
        android:src="@drawable/play_button"
        android:layout_height="match_parent"/>
    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/next_music_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</LinearLayout>